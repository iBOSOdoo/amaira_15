<template id="snippets_inherited" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']//t[@t-snippet][last()]" position="after">

            <t t-snippet="snippet_text_slider.s_text_slider_template" t-thumbnail="/snippet_text_slider/static/src/img/snippets_thumbs/s_image_text.svg" />
            <t t-snippet="snippet_text_slider.s_slider_text_template" t-thumbnail="/snippet_text_slider/static/src/img/snippets_thumbs/s_image_text.svg" />

		</xpath>
</template>



</odoo>
